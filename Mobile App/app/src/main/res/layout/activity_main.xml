<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apra.hackedmobileapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_anchorGravity="bottom|end">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_anchorGravity="top">

            <Button
                android:id="@+id/Careers"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/colorButtonNormal"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Careers"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Topics"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="18sp"
                android:text="TOPICS"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </SearchView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Law"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/darker_gray"
                    android:text="LAW"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Software"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/darker_gray"
                    android:text="SOFTWARE"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/Research"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:text="RESEARCH"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:typeface="normal"/>

                <Button
                    android:id="@+id/Medicine"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:text="MEDICINE"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:typeface="normal"/>

                <Button
                    android:id="@+id/Design"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:text="DESIGN"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:typeface="normal"/>

                <Button
                    android:id="@+id/Business"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="BUSINESS"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/Engineering"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:text="ENGINEERING"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:typeface="normal"/>

                <Button
                    android:id="@+id/Architecture"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:text="ARCHITECTURE"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:typeface="normal"/>

                <Button
                    android:id="@+id/Politics"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:text="POLITICS"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:typeface="normal"/>


            </LinearLayout>
        </ScrollView>



    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</android.support.design.widget.CoordinatorLayout>
